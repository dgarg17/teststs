<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    cls="tabpanelcss"
    helpPath="en/cq/current/wcm/default_components.html#Text"
    title="Secondary Showcase Navigation"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <linkItems
            jcr:primaryType="cq:Widget"
            addItemLabel="Add A Link"
            autoScroll="{Boolean}true"
            cls="multifieldcls"
            name="./links"
            title="Links"
            xtype="multifield">
            <fieldConfig
                jcr:primaryType="cq:Widget"
                baseCls="multifieldpanelbasecls"
                cls="cssmultifieldpanel"
                ctCls="multifieldpanelcollapsedctcls"
                xtype="multifieldpanel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <ctaText
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="CTA Text"
                        key="ctaText"
                        width="80%"
                        xtype="textfield"/>
                    <ctaURL
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        cls="csspathfield"
                        fieldLabel="CTA Link"
                        key="ctaLink"
                        width="80%"
                        xtype="pathfield"/>
                    <ctaTarget
                        jcr:primaryType="cq:Widget"
                        defaultValue="_self"
                        fieldDescription="CTA link opens in same window by default."
                        fieldLabel="CTA Target"
                        key="ctaTarget"
                        type="select"
                        width="80%"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <same
                                jcr:primaryType="nt:unstructured"
                                text="Same Window (Default)"
                                value="_self"/>
                            <new
                                jcr:primaryType="nt:unstructured"
                                text="New Window"
                                value="_blank"/>
                        </options>
                    </ctaTarget>
                    <isSecondary
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Secondary navigation items will display in the secondary link grouping."
                        fieldLabel="Item Type"
						defaultValue="false"
						inputValue="true"
                        key="isSecondary"
                        type="checkbox"
                        width="50%"
                        xtype="selection">
					</isSecondary>
                </items>
            </fieldConfig>
        </linkItems>
		<global
            jcr:primaryType="cq:Widget"
            cls="panelcss"
            title="Global Configurations"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <backgroundColor
                    jcr:primaryType="cq:Widget"
                    colors="[CC0000,D02C30,FE4A5D,FF828A,FFB0C0,EEC7CE,C20430,D8292F,E74C39,E57E3E,F2BD7D,F28B00,F5B324,F8BF00,FFD200,FFE900,009D4F,3DAF2C,76BD22,A6CE39,C3D600,009483,00A19C,00AFAB,63CCCA,9ADADA,007299,007CBB,00A8E2,00B3E3,54C9E8,76236D,923A80,A45B96,B588B9,CEADD0,B42573,E01783,EA6CB0,F6A7D7,E8BCD8,898B8E,63656A,54565B,4D4D4F]"
                    fieldLabel="Background Color"
					defaultValue="4D4E53"
                    name="./backgroundColor"
                    xtype="colorfield"/>
                <textColor
                    jcr:primaryType="cq:Widget"
                    colors="[FFFFFF,4D4E53]"
                    fieldLabel="Text Color"
                    name="./textColor"
                    xtype="colorfield"/>
                <logoLink
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Logo Link"
                    name="./logoLink"
                    xtype="pathfield"/>
                <headline
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Showcase Headline"
                    name="./headline"
                    xtype="textfield"/>
                <secondaryLinksLabel
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Secondary Links Dropdown Label"
					value="More Links"
                    name="./secondaryLinksLabel"
					defaultValue="More Links"
                    xtype="textfield"/>
            </items>
        </global>
        <image
            jcr:primaryType="cq:Widget"
            allowUpload="{Boolean}false"
            cropParameter=""
            ddGroups="[s7media]"
            disableZoom="{Boolean}true"
            fileNameParameter="./fileName"
            fileReferenceParameter="./fileReference"
            mapParameter=""
            name="./file"
            requestSuffix=".img.png"
            rotateParameter=""
            title="Partner Logo Image (Optional)"
            xtype="s7html5smartimage"/>
    </items>
</jcr:root>
