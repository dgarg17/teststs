<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="{Long}600"
    title="Petite Header"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <layout
            jcr:primaryType="cq:Widget"
            ddGroups="[s7media]"
            fileNameParameter="./fileName"
            fileReferenceParameter="./fileReference"
            name="./file"
            requestSuffix=".img.png"
            title="Logo Image"
            xtype="s7html5smartimage"/>
        <advanced
            jcr:primaryType="cq:Widget"
            title="Petite Header"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <homepageurl
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Logo URL"
                    name="./homepageurl"
                    xtype="pathfield"/>
                <link1label
                    jcr:primaryType="cq:Widget"
                    fieldDescription="If this is left blank,the label would be the page title of link by default if the link corresponds to a page else the link url  itself."
                    fieldLabel="Link1 Label"
                    name="./link1label"
                    xtype="textfield"/>
                <link1url
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Link1 URL"
                    name="./link1path"
                    xtype="pathfield"/>
                <link2label
                    jcr:primaryType="cq:Widget"
                    fieldDescription="If this is left blank,the label would be the page title of link by default if the link corresponds to a page else the link url  itself."
                    fieldLabel="Link2 Label"
                    name="./link2label"
                    xtype="textfield"/>
                <link2url
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Link2 URL"
                    name="./link2path"
                    xtype="pathfield"/>
                <link3label
                    jcr:primaryType="cq:Widget"
                    fieldDescription="If this is left blank,the label would be the page title of link by default if the link corresponds to a page else the link url  itself."
                    fieldLabel="Link3 Label"
                    name="./link3label"
                    xtype="textfield"/>
                <link3url
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Link3 URL"
                    name="./link3path"
                    xtype="pathfield"/>
                <phoneno
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Only 10 digit US phone number . No special characters allowed."
                    fieldLabel="Phone number"
                    name="./phoneno"
                    regex="/^([1-9])([0-9]{9})$/"
                    regexText="Please enter a valid phone number."
                    xtype="textfield"/>
            </items>
        </advanced>
    </items>
</jcr:root>
