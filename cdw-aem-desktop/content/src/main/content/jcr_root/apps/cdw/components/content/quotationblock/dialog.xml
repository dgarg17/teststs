<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="{Long}500"
    title="dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Widget"
                anchor="100%"
                title="Quotation Block"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <backgroundcolor
                        jcr:primaryType="cq:Widget"
                        defaultValue="-white"
                        fieldLabel="Background Color"
                        name="./backgroundcolor"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <grey
                                jcr:primaryType="nt:unstructured"
                                text="Grey"
                                value="-grey"/>
                            <red
                                jcr:primaryType="nt:unstructured"
                                text="Red"
                                value="-red"/>
                            <white
                                jcr:primaryType="nt:unstructured"
                                text="White"
                                value="-white"/>
                        </options>
                    </backgroundcolor>
                    <Opacity
                        jcr:primaryType="cq:Widget"
                        defaultValue="-noopacity"
                        fieldLabel="Background Opacity ?"
                        name="./opacity"
                        type="radio"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <yes
                                jcr:primaryType="nt:unstructured"
                                text="Yes"
                                value="-opacity"/>
                            <no
                                jcr:primaryType="nt:unstructured"
                                text="No"
                                value="-noopacity"/>
                        </options>
                    </Opacity>
                    <textcolor
                        jcr:primaryType="cq:Widget"
                        colors="[4D4E53,CC0000,FFFFFF]"
                        defaultValue="4D4E53"
                        fieldLabel="Text Color"
                        name="./textcolor"
                        xtype="colorfield"/>
                    <textalignment
                        jcr:primaryType="cq:Widget"
                        defaultValue="-left"
                        fieldLabel="Text Alignment"
                        name="./textalignment"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <left
                                jcr:primaryType="nt:unstructured"
                                text="Left"
                                value="-left"/>
                            <right
                                jcr:primaryType="nt:unstructured"
                                text="Right"
                                value="-right"/>
                            <center
                                jcr:primaryType="nt:unstructured"
                                text="Center"
                                value="-center"/>
                        </options>
                    </textalignment>
                    <text
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Quotation Text"
                        name="./quotetext"
                        xtype="textarea"/>
                    <quotelink
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Quote Link"
                        name="./quotelink"
                        xtype="pathfield"/>
                    <quotetarget
                        jcr:primaryType="cq:Widget"
                        defaultValue="_self"
                        fieldDescription="Quote link opens in same window by default."
                        fieldLabel="Quote Link Target"
                        name="./quotetarget"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <new
                                jcr:primaryType="nt:unstructured"
                                text="New Window"
                                value="_blank"/>
                            <same
                                jcr:primaryType="nt:unstructured"
                                text="Same Window (Default)"
                                value="_self"/>
                        </options>
                    </quotetarget>
                    <sourcedContentName
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Sourced Content Name"
                        name="./sourceName"
                        xtype="textfield"/>
                    <sourcecontentlink
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Sourced Content Link"
                        name="./sourcelink"
                        xtype="pathfield"/>
                    <sourcecontenttarget
                        jcr:primaryType="cq:Widget"
                        defaultValue="_self"
                        fieldDescription="Sourced content link opens in same window by default."
                        fieldLabel="Sourced Content Target"
                        name="./sourcetarget"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <new
                                jcr:primaryType="nt:unstructured"
                                text="New Window"
                                value="_blank"/>
                            <same
                                jcr:primaryType="nt:unstructured"
                                text="Same Window (Default)"
                                value="_self"/>
                        </options>
                    </sourcecontenttarget>
                    <sourcedContentTitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Sourced Content Title"
                        name="./sourcedcontenttitle"
                        xtype="textfield"/>
                    <ctalabel
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CTA Label"
                        name="./ctalabel"
                        xtype="textfield"/>
                    <ctalink
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CTA Link"
                        name="./ctalink"
                        xtype="pathfield"/>
                    <ctatarget
                        jcr:primaryType="cq:Widget"
                        defaultValue="_self"
                        fieldDescription="CTA link opens in same window by default."
                        fieldLabel="CTA Target"
                        name="./ctatarget"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <new
                                jcr:primaryType="nt:unstructured"
                                text="New Window"
                                value="_blank"/>
                            <same
                                jcr:primaryType="nt:unstructured"
                                text="Same Window (Default)"
                                value="_self"/>
                        </options>
                    </ctatarget>
                </items>
            </tab1>
            <layout
                jcr:primaryType="cq:Widget"
                ddGroups="[s7media]"
                fileNameParameter="./fileName"
                fileReferenceParameter="./fileReference"
                name="./file"
                requestSuffix=".img.png"
                title="Sourced Content  Image"
                xtype="s7html5smartimage"/>
        </items>
    </items>
</jcr:root>
