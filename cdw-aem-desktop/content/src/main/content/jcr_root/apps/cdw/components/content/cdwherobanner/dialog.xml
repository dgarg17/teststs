<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="650"
    title="dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Widget"
                anchor="100%"
                title="Text"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <headline1
                        jcr:primaryType="cq:Widget"
                        fieldDescription="First segment of Main Headline"
                        fieldLabel="Headline 1"
                        name="./headline1"
                        xtype="textfield"/>
                    <headline2
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Second segment of Main Headline; an 'and' separator will automatically be added between the two segments if this is present."
                        fieldLabel="Headline 2"
                        name="./headline2"
                        xtype="textfield"/>
                    <brandLogo
                        jcr:primaryType="cq:Widget"
                        fieldDescription=" Use image name only(e.g. - ‘H-P’) in the text field in order to generate the proper S7 URL"
                        fieldLabel="Brand Logo"
                        name="./brandLogo"
                        xtype="textfield"/>
                    <subheadline
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Sub Headline"
                        name="./subheadline"
                        xtype="textfield"/>
                    <prefixsubheadline
                        jcr:primaryType="cq:Widget"
                        editElementQuery="div[class=&quot;text&quot;]"
                        fieldLabel="Prefix sub headline?"
                        name="./prefixsubheadline"
                        type="checkbox"
                        xtype="selection"/>
                    <text
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Body Copy"
                        name="./bodytext"
                        xtype="textarea"/>
                    <textcolor
                        jcr:primaryType="cq:Widget"
                        colors="[4D4D4F,FFFFFF,CC0000]"
                        fieldLabel="Text Color"
                        name="./textcolor"
                        xtype="colorfield"/>
                    <textalignment
                        jcr:primaryType="cq:Widget"
                        defaultValue="align-left"
                        fieldLabel="Text Alignment"
                        name="./textalignment"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <left
                                jcr:primaryType="nt:unstructured"
                                text="Left"
                                value="align-left"/>
                            <right
                                jcr:primaryType="nt:unstructured"
                                text="Right"
                                value="align-right"/>
                            <center
                                jcr:primaryType="nt:unstructured"
                                text="Center"
                                value="align-center"/>
                        </options>
                    </textalignment>
                    <backgroundcolor
                        jcr:primaryType="cq:Widget"
                        colors="[CC0000,D02C30,FE4A5D,FF828A,FFB0C0,EEC7CE,C20430,D8292F,E74C39,E57E3E,F2BD7D,F28B00,F5B324,F8BF00,FFD200,FFE900,009D4F,3DAF2C,76BD22,A6CE39,C3D600,009483,00A19C,00AFAB,63CCCA,9ADADA,007299,007CBB,00A8E2,00B3E3,54C9E8,76236D,923A80,A45B96,B588B9,CEADD0,B42573,E01783,EA6CB0,F6A7D7,E8BCD8,898B8E,63656A,54565B,4D4D4F]"
                        fieldLabel="Background Color"
                        name="./backgroundcolor"
                        xtype="colorfield"/>
                    <ctalabel
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Max character limit is 24"
                        fieldLabel="CTA Label"
                        maxLength="{Long}24"
                        name="./cdwctalabel"
                        xtype="textfield"/>
                    <ctalink
                        jcr:primaryType="cq:Widget"
                        fieldLabel="CTA Link"
                        name="./ctalink"
                        xtype="pathfield"/>
                    <ctabutton
                        jcr:primaryType="cq:Widget"
                        defaultValue="-red"
                        fieldLabel="CTA Button Style"
                        name="./ctabuttonstyle"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <red
                                jcr:primaryType="nt:unstructured"
                                text="Signature Red Button (Default)"
                                value="-red"/>
                            <white
                                jcr:primaryType="nt:unstructured"
                                text="White Ghost Button"
                                value="-white"/>
                        </options>
                    </ctabutton>
                    <ctatarget
                        jcr:primaryType="cq:Widget"
                        defaultValue="_self"
                        fieldDescription="CTA link opens in same window by default."
                        fieldLabel="CTA Target"
                        name="./ctatarget"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <new
                                jcr:primaryType="nt:unstructured"
                                text="New Window"
                                value="_blank"/>
                            <same
                                jcr:primaryType="nt:unstructured"
                                text="Same Window (Default)"
                                value="_self"/>
                        </options>
                    </ctatarget>
                    <linkTitle
                            jcr:primaryType="cq:Widget"
                            fieldDescription="If defined, will populate the 'title' attribute of the 'a' element."
                            fieldLabel="Link Title"
                            name="./linkTitle"
                            xtype="textfield"/>
                    <eventdata
                            jcr:primaryType="cq:Widget"
                            collapsed="{Boolean}true"
                            collapsible="{Boolean}true"
                            title="Ensighten Event data"
                            xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <eventType
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="{Boolean}false"
                                    defaultValue="sEvent"
                                    fieldDescription="Event Type between cmCreateElementTag/cmCreatePromotionTag"
                                    fieldLabel="Event Type"
                                    name="./eventType"
                                    type="select"
                                    xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <standard
                                            jcr:primaryType="nt:unstructured"
                                            text="Standard Click(Default)"
                                            value="sEvent"/>
                                    <partner
                                            jcr:primaryType="nt:unstructured"
                                            text="Partner Click"
                                            value="pEvent"/>
                                </options>
                            </eventType>
                            <eventTitle
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Event Title"
                                    name="./eventTitle"
                                    xtype="textfield"/>
                            <eventData
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Event Data"
                                    name="./eventData"
                                    xtype="textfield"/>
                        </items>
                    </eventdata>
                </items>
            </tab1>
            <image
                jcr:primaryType="cq:Widget"
                allowUpload="{Boolean}false"
                cropParameter=""
                ddGroups="[media]"
                disableZoom="{Boolean}true"
                fileNameParameter="./image1/fileName"
                fileReferenceParameter="./fileReference"
                mapParameter=""
                name="./image1/file"
                requestSuffix=".img.png"
                rotateParameter=""
                title="Background Image"
                xtype="html5smartimage"/>
        </items>
    </items>
</jcr:root>
