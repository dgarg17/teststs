<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:TabPanel"
    activeTab="0"
    helpPath="en/cq/current/wcm/default_components.html#Text Image"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
            jcr:primaryType="cq:Widget"
            anchor="100%"
            title="Text"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <headline1
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Headline 1"
                    name="./headline1"
                    xtype="textfield"/>
                <headline2
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Headline 2"
                    name="./headline2"
                    xtype="textfield"/>
                <subheadline
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Sub Headline"
                    name="./subheadline"
                    xtype="textarea"/>
                <prefixsubheadline
                    jcr:primaryType="cq:Widget"
                    editElementQuery="div[class=&quot;text&quot;]"
                    fieldLabel="Prefix sub headline?"
                    name="./prefixsubheadline"
                    type="checkbox"
                    xtype="selection"/>
                <text
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Body Copy"
                    name="./bodytext"
                    xtype="textarea">
                    <rtePlugins jcr:primaryType="nt:unstructured">
                        <links jcr:primaryType="nt:unstructured">
                            <linkDialogConfig
                                jcr:primaryType="nt:unstructured"
                                height="{Long}316">
                                <linkAttributes jcr:primaryType="cq:WidgetCollection">
                                    <linkAdvanced
                                        jcr:primaryType="cq:Widget"
                                        collapsed="{Boolean}true"
                                        collapsible="{Boolean}true"
                                        inputValue="advanced"
                                        name="./linkdialog/cq:adhocLinkTrackingTab"
                                        title="Link tracking"
                                        xtype="dialogfieldset">
                                        <items jcr:primaryType="cq:WidgetCollection">
                                            <enable
                                                jcr:primaryType="nt:unstructured"
                                                attribute="enabletracking"
                                                fieldDescription="override analytics framework settings"
                                                fieldLabel="Custom link tracking"
                                                name="./linkdialog/cq:adhocLinkTrackingEnableTracking"
                                                xtype="checkbox">
                                                <listeners
                                                    jcr:primaryType="nt:unstructured"
                                                    check="function(component){var dlg=component.findParentByType('rtelinkdialog');dlg.enableSCFields(component.checked);}"/>
                                            </enable>
                                            <events
                                                jcr:primaryType="nt:unstructured"
                                                attribute="adhocevents"
                                                fieldDescription="e.g.: event2, event7"
                                                fieldLabel="Include SiteCatalyst events"
                                                name="./linkdialog/cq:adhocLinkTrackingEvents"
                                                xtype="textfield"/>
                                            <evars
                                                jcr:primaryType="nt:unstructured"
                                                attribute="adhocevars"
                                                fieldDescription="e.g.: eVar1: pagedata.url, prop4: 'const'"
                                                fieldLabel="Include SiteCatalyst variables"
                                                name="./linkdialog/cq:adhocLinkTrackingEvars"
                                                xtype="textfield"/>
                                        </items>
                                    </linkAdvanced>
                                </linkAttributes>
                            </linkDialogConfig>
                        </links>
                    </rtePlugins>
                </text>
                <richFlag
                    jcr:primaryType="cq:Widget"
                    ignoreData="{Boolean}true"
                    name="./textIsRich"
                    value="true"
                    xtype="hidden"/>
                <ctalabel
                    jcr:primaryType="cq:Widget"
                    fieldLabel="CTA Label"
                    name="./cdwctalabel"
                    xtype="textfield"/>
                <ctalink
                    jcr:primaryType="cq:Widget"
                    fieldLabel="CTA Link"
                    name="./ctalink"
                    xtype="pathfield"/>
                <textcolor
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Text Color"
                    name="./textcolor"
                    xtype="colorfield"/>
                <textalignment
                    jcr:primaryType="cq:Widget"
                    defaultValue="left"
                    fieldDescription="Text alignment position"
                    fieldLabel="Text Alignment"
                    name="./textalignment"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <left
                            jcr:primaryType="nt:unstructured"
                            text="Left"
                            value="left"/>
                        <right
                            jcr:primaryType="nt:unstructured"
                            text="Right"
                            value="right"/>
                    </options>
                </textalignment>
                <backgroundcolor
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Background Color"
                    name="./backgroundcolor"
                    xtype="colorfield"/>
            </items>
        </tab1>
        <tab3
            jcr:primaryType="cq:Widget"
            title="Background Image "
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <backgroundimage
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Background Image"
                    name="./backgroundimage"
                    xtype="pathfield"/>
            </items>
        </tab3>
    </items>
</jcr:root>
