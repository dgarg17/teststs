<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Widget"
                anchor="100%"
                title="Configuration"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <headline1
                        jcr:primaryType="cq:Widget"
                        fieldDescription="First segment of Main Headline"
                        fieldLabel="Headline 1"
                        name="./headline1"
                        xtype="textfield"/>
                    <headline2
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Second segment of Main Headline; an 'and' separator will automatically be added between the two segments if this is present."
                        fieldLabel="Headline 2"
                        name="./headline2"
                        xtype="textfield"/>
                    <textcolor
                        jcr:primaryType="cq:Widget"
                        colors="[CC0000,FFFFFF,4D4E53]"
                        defaultValue="CC0000"
                        fieldLabel="Text Color"
                        name="./textcolor"
                        xtype="colorfield"/>
                    <textsize
                        jcr:primaryType="cq:Widget"
                        defaultValue="h2"
                        fieldLabel="Text Size"
                        name="./textsize"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <left
                                jcr:primaryType="nt:unstructured"
                                text="h2 (Default)"
                                value="h2"/>
                            <right
                                jcr:primaryType="nt:unstructured"
                                text="h3"
                                value="h3"/>
                            <center
                                jcr:primaryType="nt:unstructured"
                                text="h4"
                                value="h4"/>
                        </options>
                    </textsize>
                    <textstyle
                        jcr:primaryType="cq:Widget"
                        defaultValue="prelo-black"
                        fieldLabel="Text Style"
                        name="./textstyle"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <preloblack
                                jcr:primaryType="nt:unstructured"
                                text="PreloBlack (default)"
                                value="prelo-black"/>
                            <prelobold
                                jcr:primaryType="nt:unstructured"
                                text="Prelo-Bold"
                                value="prelo-bold"/>
                            <prelosemi_bold
                                jcr:primaryType="nt:unstructured"
                                text="Prelo-SemiBold"
                                value="prelo-semibold"/>
                            <preloslab_bold
                                jcr:primaryType="nt:unstructured"
                                text="PreloSlab-Bold "
                                value=" preloslab-bold"/>
                            <preloslab_semibold
                                jcr:primaryType="nt:unstructured"
                                text="PreloSlab-SemiBold "
                                value="preloslab-semibold"/>
                        </options>
                    </textstyle>
                    <textalignment
                        jcr:primaryType="cq:Widget"
                        defaultValue="-left"
                        fieldLabel="Text Alignment"
                        name="./textalignment"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <left
                                jcr:primaryType="nt:unstructured"
                                text="Left (Default)"
                                value="-left"/>
                            <right
                                jcr:primaryType="nt:unstructured"
                                text="Right"
                                value="-right"/>
                            <center
                                jcr:primaryType="nt:unstructured"
                                text="Center"
                                value="-center"/>
                        </options>
                    </textalignment>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
